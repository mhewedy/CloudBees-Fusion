{
  "manifest_version": 3,
  "name": "Jenkins Enhanced Tools",
  "version": "1.0",
  "description": "Transforms Jenkins links into popup forms and redirects to Pipeline Explorer",
  "permissions": ["activeTab", "scripting", "webNavigation", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Jenkins Enhanced Tools"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}